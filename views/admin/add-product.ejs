    <body>
    <%- include('../includes/nav.ejs')%>
        <div class="container">
            <h1><%= title %></h1>
            <form action="<%= !editMode ? '/admin/add-product' : ('/admin/edit-product/' + product._id) %>" method="POST">
                <div class="form-group">
                    <label for="title">Product name</label>
                        <input class="form-control" type="text" name="title" id="title"
                               placeholder="<%= !editMode ? 'name...' : ''%>"
                               value="<%= !editMode ? '' : product.title%>"
                        >
                </div>
                <div class="form-group">
                    <label for="imageUrl">Image URL</label>
                    <input class="form-control" type="text" name="imageUrl" id="imageUrl"
                           placeholder="<%= !editMode ? 'Image URL...' : ''%>"
                           value="<%= !editMode ? '' : product.imageUrl%>"
                    >
                </div>
                <div class="form-group">
                    <label for="price">Price</label>
                    <input class="form-control" type="number" step="0.01" name="price" id="price"
                           placeholder="<%= !editMode ? 'Price...' : ''%>"
                           value="<%= !editMode ? '' : product.price%>"
                    >
                </div>
                <div class="form-group">
                    <label for="description">Description</label>
                    <textarea class="form-control" name="description" id="description" placeholder="<%= !editMode ? 'Description...' : ''%>"><%= !editMode ? '' : product.description%>
                    </textarea>
                </div>
                <button type="submit" class="btn btn-primary"><%=!editMode ? 'Add product' : 'Save' %></button>
            </form>
        </div>
    </body>
<%- include('../includes/footer.ejs') %>